<apex:page controller="SCP_OrderReviewEmailCartController" sidebar="false" showHeader="false" applyBodyTag="false" renderAs="PDF">  

    <div class="main_content_large_left_container" style="width: 702px;">
                <div style="width: 702px;">
                    <apex:image id="theImage" value="{!$Resource.OmnicellLogo_PDF}"/>
                </div>
        <apex:pageBlock > 
        <h1 >Shopping Cart</h1>
        
        <p><strong>Generated By:</strong>&nbsp;&nbsp; <apex:outputText style="font-weight:bold;" value="{!conFirstName}"/>&nbsp;<apex:outputText style="font-weight:bold;" value="{!conLastName}"/>
        </p> 
        <apex:pageBlockTable value="{!Cartrecords}" var="Cartrecord">
            <apex:column style="font-weight:bold;" value="Account Name: {!effAccountName }"/> 
               
       </apex:pageBlockTable>  
            <br/>
            <apex:pageBlockTable value="{!Cartrecords}" var="Cartrecord">
            
              <apex:column style="font-weight:bold;" value="Cart Name: {!Cartrecord.Name }"/> 
       </apex:pageBlockTable>
        
        <p style="font-weight:bold;">
        Date:&nbsp;{!NOW()}
        </p>
        
        
        <apex:pageBlockTable value="{!wrapcartItemsList}" var="Cartrecord" styleclass="shopping_cart" style="width: 702px;" border="1" cellSpacing="0" cellPadding="0"> 
            <apex:column > 
                <apex:facet name="header">ProductName</apex:facet> 
                <apex:outputText value="{!Cartrecord.productName}"/><br/><br/>
                <strong>SKU:</strong>&nbsp;<apex:outputText value="{!Cartrecord.sku}"/> <br/> <br/>
				                
                <apex:outputPanel rendered="{!Cartrecord.machine != ''}">Machine: {!Cartrecord.machine} <br/> </apex:outputPanel>
                <apex:outputPanel rendered="{!Cartrecord.drugcode != ''}">Drug Code: {!Cartrecord.drugcode} <br/> </apex:outputPanel>
                <apex:outputPanel rendered="{!Cartrecord.brand != ''}">Brand: {!Cartrecord.brand} <br/> </apex:outputPanel>
                <apex:outputPanel rendered="{!Cartrecord.strength != ''}">Drug Strength: {!Cartrecord.strength} <br/> </apex:outputPanel>
				
                Unit Of Measure:<apex:outputText value="{!Cartrecord.uom}"/>
            </apex:column> 
                        <apex:column width="86"> 
                <apex:facet name="header">Price</apex:facet> 
                <apex:outputText value="{!Cartrecord.price}"/> 
            </apex:column> 
                        <apex:column width="92"> 
                <apex:facet name="header">Qty</apex:facet> 
                <apex:outputText value="{!Cartrecord.qty}"/> 
            </apex:column> 
                        <apex:column width="86"> 
                <apex:facet name="header">Discount</apex:facet> 
                <apex:outputText value="{!Cartrecord.discount}"/> 
            </apex:column> 
                        <apex:column width="87" > 
                <apex:facet name="header">Total</apex:facet> 
                <apex:outputText value="{!Cartrecord.total}"/> 
            </apex:column> 
        </apex:pageBlockTable>
        <br/>
            <apex:pageBlockTable value="{!Cartrecords}" var="Cartrecord">
             <apex:column value="Estimated Tax: {!Cartrecord.ccrz__TaxAmount__c }"/>
       </apex:pageBlockTable>
            <apex:pageBlockTable value="{!Cartrecords}" var="Cartrecord">
             <apex:column value="Estimated Shipping: {!Cartrecord.ccrz__ShipAmount__c }"/>
       </apex:pageBlockTable>
        <apex:pageBlockTable value="{!Cartrecords}" var="Cartrecord">
             <apex:column style="font-weight:bold;" value="Grand Total: {!gtotal }"/>
       </apex:pageBlockTable>
    
    </apex:pageBlock>
        
    </div>
</apex:page>